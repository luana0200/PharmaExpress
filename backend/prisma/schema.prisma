// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cadastro {
  id        String    @id @default(uuid())
  name      String
  dateN     String
  cpf_cnpj  String
  email     String
  password  String
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  @@map("cadastro")
}

model Produtos {
  id          String    @id @default(uuid())
  name        String
  value       String
  quantity    String
  provider    String
  description String
  banner      String
  categoriaId String

  create_at   DateTime? @default(now()) // para salvar a data que foi criado
  update_at   DateTime? @default(now()) //para qunado tiver alteracoes salvar a data

  categorias  Categorias @relation(fields: [categoriaId], references: [id])
  carrinho Carrinho[]
  @@map("produtos")
}

model Categorias {
  id        String    @id @default(uuid())
  name      String
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())

  produtos Produtos[]

  @@map("categorias")
}

model Carrinho {
  id        String    @id @default(uuid())
  n_pedido Int
  create_at DateTime? @default(now())
  update_at DateTime? @default(now())
  order_id String
  produtos_id String
  order Order @relation(fields: [order_id], references: [id])
  produtos Produtos @relation(fields: [produtos_id], references: [id])

  @@map("carrinho")
}

model Order {
id String @id @default(uuid())
table Int
create_at DateTime? @default(now())
update_at DateTime? @default(now())
carrinho Carrinho[]

}
